.container
  .row
    .col-md-12
      br
      br
  .row
    h1.text-center
      | Referentials
    .col-md-12
      .panel.panel-default.panel-table
        .panel-heading
          .row
            .col-md-12
              = link_to t('referentials.create.title'), new_referential_path, class: 'btn btn-sm btn-primary btn-create pull-right'

        .panel-body
          table.table.table-striped.table-bordered.table-list
            thead
              tr
                th.hidden-xs
                  | ID
                th
                  | Slug
                th
                  | NextReloadAt
                th
                  | Token
                th
                  em.fa.fa-cog
            tbody
              - @referentials_tab.each do |i|
                tr
                  td.hidden-xs
                    = i["Id"]
                  td
                    = i["Slug"]
                  td
                    = i["NextReloadAt"]
                  td
                    = i["Tokens"][0]
                  td[align="center"]
                    = link_to referential_partners_path(i["Slug"], token: i["Tokens"][0]), class: 'btn btn-default' do
                      em.fa.fa.fa-eye
                    = link_to edit_referential_path({slug: i["Slug"], token: i["Tokens"][0], id: i["Id"], next_reload_at: i["NextReloadAt"]}), class: 'btn btn-default' do
                      em.fa.fa.fa-pencil
                    = link_to referential_path(i["Id"]), method: :delete, data: {confirm: "Are you sure you want to delete this referential ?"}, class: 'btn btn-danger' do
                      em.fa.fa.fa-trash

