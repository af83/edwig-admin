<div class="container">
  <div class="row">
    <div class="col-md-12">
      <br><br>
    </div>
  </div>
  <div class="row">
    <h1 class="text-center">Referentials</h1>
    <div class="col-md-12">
      <div class="panel panel-default panel-table">
        <div class="panel-heading">
          <div class="row">
            <div class="col-md-12">
              <button type="button" class="btn btn-sm btn-primary btn-create newButton">Create New Referential</button>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-bordered table-list">
            <thead>
            <tr>
              <th class="hidden-xs">ID</th>
              <th>Slug</th>
              <th>NextReloadAt</th>
              <th>Token</th>
              <th><em class="fa fa-cog"></em></th>
            </tr>
            </thead>
            <tbody>
            <% @referentials_tab.each do |i| %>
                <tr>
                  <td class="hidden-xs"><%= i["Id"] %></td>
                  <td><%= i["Slug"] %></td>
                  <td><%= i["NextReloadAt"] %></td>
                  <td><%= i["Tokens"][0] %></td>
                  <td align="center">
                    <%= link_to (raw("<em class=\"fa fa fa-eye\"></em>")), referential_partners_path(i["Slug"], token: i["Tokens"][0]), class: "btn btn-default" %>
                    <%= link_to (raw("<em class=\"fa fa fa-pencil\"></em>")), edit_referential_path({:slug => i["Slug"]}), :class => "btn btn-default" %>
                    <%= link_to (raw("<em class=\"fa fa-trash\"></em>")), referential_path(i["Id"]), :method=>'delete', :confirm=>'Are you sure you want to delete this referential_path ?', class: "btn btn-danger"%>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
