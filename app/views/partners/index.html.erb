<div class="container">
	<div class="row">
		<div class="col-md-12">
			<%= link_to (raw("<em class=\"fa fa-arrow-left \"></em>")), referentials_path, class: "btn btn-default", "id"=>"backButton" %>
		</div>
	</div>
  <div class="row">
    <h1 class="text-center">Liste des Partners</h1>
    <div class="col-md-12">
      <div class="panel panel-default panel-table">
        <div class="panel-heading">
          <div class="row">
            <div class="col-md-12">
              <button type="button" class="btn btn-sm btn-primary btn-create newButton">Create New Referential</button>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-bordered table-list">
            <thead>
            <tr>
              <th class="hidden-xs">ID</th>
              <th>Slug</th>
              <th>PartnerStatus</th>
              <th>ConnectorTypes</th>
              <th>Settings</th>
              <th><em class="fa fa-cog"></em></th>
            </tr>
            </thead>
            <tbody>
            <% @partners_tab.each do |i| %>
                <tr>
                  <td class="hidden-xs"><%= i["Id"] %></td>
                  <td><%= i["Slug"] %></td>
                  <td>
                  	<% i["PartnerStatus"].each do |key, value|%>
                  		<%= ">#{key}: #{value}" %><br>
                  	<%end%>
                  </td>
                  <td>
                  	<% i["ConnectorTypes"].each do |connector|%>
                  		<%= ">#{connector}" %><br>
                  	<% end %>
                  </td>
                  <td>
                  	<% i["Settings"].each do |key, value|%>
                  		<%= ">#{key}: #{value}" %><br>
                  	<% end %>
                  </td>
                  <td align="center">
                    <a class="btn btn-default"><em class="fa fa-pencil"></em></a>
                    <%= link_to (raw("<em class=\"fa fa-trash\"></em>")), referential_partner_path(id: i["Id"], slug: @referential_slug, token: @referential_token), :method=>'delete', :confirm=>'Are you sure you want to delete this referential_path ?', class: "btn btn-danger"%>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
